<!--<?xml version="1.0" encoding="utf-8"?>-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.example.belal.tripplanner.RegisterScreen">

        <TextView
            android:gravity="center"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/textView"
            android:textColor="@color/colorPurple"
            android:textSize="35sp"
            android:textStyle="normal|bold|italic" />

        <EditText
            android:drawableLeft="@drawable/account_outline"
            android:textColorHint="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="  Username"
            android:id="@+id/usernameEditReg"
            />

        <EditText
            android:drawableLeft="@drawable/lock_outline"
            android:textColorHint="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint=" password"
            android:id="@+id/passwordEditReg"
            />
        <CheckBox

            android:id="@+id/checkboxOfPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Show Password"
            android:textSize="18dp"
            />

        <Button
            android:textSize="26dp"
            android:layout_marginTop="36dp"
            android:background="@color/colorPurple"
            android:textColorHint="#fff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Save"
            android:id="@+id/saveBtnReg"
            />
    </LinearLayout>
</ScrollView>
